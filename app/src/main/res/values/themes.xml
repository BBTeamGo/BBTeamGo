<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BBTeamGo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BBTeamGo" parent="Base.Theme.BBTeamGo" />

    <style name="ButtonStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/bluebutton</item>
        <item name="android:radius">160dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/deep_blue</item>
        <item name="color">@color/blue</item>
    </style>

    <style name="EditViewStyle">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:radius">60dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>
</resources>