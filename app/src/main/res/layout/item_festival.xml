<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/booking_management_list_background"
    android:elevation="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/festival_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/booking_management_list_background"
            android:src="@drawable/festival_test_image" />

        <TextView
            android:id="@+id/festival_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/festival_image"
            android:text="2023 숭실대학교 대동제"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/festival_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/festival_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/festival_image"
            android:text="2023 숭실대학교 대동제 &lt; AWAKE &gt;!" />
    </RelativeLayout>

</LinearLayout>