<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="72dp"
        android:minHeight="72dp"
        android:src="@drawable/multipurpose_image_1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/table_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1번 테이블"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/main_icon"
        app:layout_constraintTop_toTopOf="@id/main_icon" />

    <TextView
        android:id="@+id/order_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:30 주문"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/main_icon"
        app:layout_constraintBottom_toBottomOf="@id/main_icon" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20000원"
        android:textSize="28sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="@id/main_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/main_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>