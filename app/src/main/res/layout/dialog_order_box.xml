<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테이블을 골라주세요"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:textColor="@color/black">

        </TextView>

        <ImageButton
            android:id="@+id/cancel_btn"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/x_button"
            android:contentDescription="닫기버튼이다.">

        </ImageButton>

    </LinearLayout>

    <Spinner
        android:id="@+id/select_table_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/table_number"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialog_spinner_background">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문할 메뉴를 골라주세요"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문내역"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 순대볶음x1"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 오뎅탕x2"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/select_menu_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/menu_list"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dialog_spinner_background"
            android:layout_weight="1">
        </Spinner>

        <Button
            android:id="@+id/add_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/add_menu_button_background"
            android:text="추가"
            android:textColor="@color/white"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_complete_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/bluebutton">

    </Button>






</LinearLayout>