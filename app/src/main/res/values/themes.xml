<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BBTeamGo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BBTeamGo" parent="Base.Theme.BBTeamGo" />

    <style name="ButtonStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/bluebutton</item>
        <item name="android:radius">160dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/deep_blue</item>
        <item name="color">@color/blue</item>
    </style>

    <style name="EditViewStyle">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:radius">60dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>
    <style name="SearchFestival_cmh">
        <item name="paddingStart">15dp</item>
        <item name="android:background">@drawable/search_input</item>
    </style>
    <style name="ReservationBox_cml">
        <item name="android:background">@drawable/reservationtop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="ProfileCircle">
        <item name="android:background">@drawable/circle</item>
    </style>
    <style name="nameCard">
        <item name="android:background">@drawable/name_card</item>
    </style>

</resources>