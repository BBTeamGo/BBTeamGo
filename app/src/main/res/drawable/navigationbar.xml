<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD0D0D0"
                android:angle="45"
                android:centerY="0.5"
                android:centerX="0.5"
                android:endColor="#FFDDDDDD"/>
        </shape>
    </item>

    <item android:top="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid
                android:color="#F4F4F4" />
        </shape>
    </item>

</layer-list>